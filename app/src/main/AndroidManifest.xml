<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lk.nirmalsakila.newsfeedreader">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".utils.GlobalClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_news_square"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_news_circle"
        android:supportsRtl="true"
        android:theme="@style/AppThemeDark.NoActionBar">
        <activity
            android:name=".views.MainActivity"
            android:screenOrientation="portrait">
            <!--<intent-filter>-->
                <!--<action android:name="android.intent.action.MAIN" />-->

                <!--<category android:name="android.intent.category.LAUNCHER" />-->
            <!--</intent-filter>-->
        </activity>
        <activity
            android:name=".views.NewsFeedActivity"
            android:parentActivityName=".views.MainActivity"
            android:label="@string/title_activity_news_feed" />

        <activity android:name=".views.WelcomeActivity"/>
        <activity android:name=".views.WelcomeScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>